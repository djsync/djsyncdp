<p id="notice"><%= notice %></p>
<div class="party_header">
    <h1><%= @party.party_name %></h1>
    <div class="party_description">
      <h2 class="cf"><span>Party Type:</span><%= @party.party_type %></h2>
      <h2 class="cf"><span>Party Location:</span><%= @party.party_location %></h2>
      <h2 class="cf"><span>Party Time:</span><%= @party.start_date.strftime("%B %d, %Y at %I:%M%p") %></h2>
      <h2 class="cf"><span>Party Identifiier:</span>Your party identifier: <%= @party.identifier %></h2>
      <p>Party Details</p>
      <%= @party.party_details %>
    </div>   
</div>



<div class="playlist">
  <h2><%= @party.party_name %> Setlist:</h2>

    <% if @party.fluxes.empty? %>
        No songs have been added to this party's playlist.
    <% else %>
      <div>
        <ul class="playlist_container">
        <% @party.fluxes.sort!{|f1,f2|f2.score <=> f1.score}.each do |f| %>
            <li class="playlist_row cf"> 
              <p><%= f.song.song_name %></p>
              <p><%= f.score %> Votes</p>

              <p>
                <% if !session[:votes].include? f.id %>
                  <%= link_to 'Vote up!', :controller => 'fluxes', :action => 'vote_up', :id => f.id %>
                <% else %>
                  Voted up!
                <% end %>
              </p>

            </li>
        <% end %>
      </ul> 
  <% end %>
  </div>
  </p>
</div>

<div style="text-align:center;">
  <%= link_to 'Add Song', :controller => 'fluxes', :action => 'new', :party_id => @party.id %> |
  <%= link_to 'Edit', edit_party_path(@party) %> |
  <%= link_to 'Back', parties_path %>
</div>
